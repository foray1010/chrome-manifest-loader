{
  "extends": ["config:base", ":automergeMinor", ":assignAndReview(foray1010)"],
  "timezone": "Asia/Hong_Kong",
  "schedule": ["after 2am and before 5am"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["after 5am and before 6am on Monday"]
  },
  "node": {
    "supportPolicy": ["lts_active"]
  },
  "packageRules": [
    {
      "packagePatterns": ["^eslint"],
      "groupName": "eslint packages"
    },
    {
      "packagePatterns": ["^import-sort-"],
      "groupName": "import-sort monorepo"
    },
    {
      "packagePatterns": ["^stylelint"],
      "groupName": "stylelint packages"
    }
  ],
  "semanticCommits": true,
  "semanticCommitType": "chore",
  "prCreation": "not-pending",
  "stabilityDays": 3
}
